// variables have to be set before importing bootstrap
// set variables here

// set the correct sprite paths
$iconSpritePath: image-path('glyphicons-halflings.png');
$iconWhiteSpritePath: image-path('glyphicons-halflings-white.png');

$blue: #5A4CFF;

// now import
@import 'twitter/bootstrap';

body {
  font-family:'PT Sans', sans-serif;
  color: #636363;
  font-size: 16px;
}

h1, h2, h3, h4, h5 {
  font-family: 'Nixie One', sans-serif;
  font-weight: 400;
  color: $blue;
}

a { color: #636363; }

a:hover {
  color: $blue;
  text-decoration: none;
}

.help-inline { color: #d43f3a; }

.header-container {
  padding-top: 10px;
  padding-bottom: 10px;
  background-color: #696868;
}

.logo {
  padding-top: 10px;
  padding-bottom: 10px;
  float: left;
  font-family:'Nixie One', sans-serif;
  color: white;
  font-size: 56px;
  line-height: 56px;
  letter-spacing: 2px;
  text-decoration: none;
}

.menu.nav {
  float: right;
  margin: 15px 0px;
  a { color: #FFFFFF; }
  a:hover { color: $blue; }
}

.content-container {
  padding: 20px 0px 50px 0px;
}



// bootstrap overrides
.btn.btn-primary { background-color: $blue; }

.page-header { margin-bottom: 40px; }

.alert-notice {
  background-color: #dff0d8;
  border-color: #d6e9c6;
  color: #468847;
}
