<div class="row">
	<div class="eightcol">
		<ol>
			<li>
				<% form_tag session_path do -%>
				<%= label_tag 'login' %>
				<%= text_field_tag 'login', @login %>
			</li>
			<li>
				<%= label_tag 'password' %>
				<%= password_field_tag 'password', nil %>
			</li>
			<li>
				<%= submit_tag "Log in", :class => "button", :style => "margin-left: 87px;" %>
			</li>
		<% end -%>
		</ol>
	</div>
	
	<div class="fourcol last">
	</div>
	
</div>



